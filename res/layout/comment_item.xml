<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="8"
    android:layout_marginTop="10sp" >
    <ImageView 
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:src="@drawable/lol_type_pressed"
        android:id="@+id/userImageComment"
        />
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp">
        	<LinearLayout 
        	    android:orientation="horizontal"
        	    android:layout_height="wrap_content"
        	    android:layout_width="wrap_content" >
        	    <TextView 
        	        android:id="@+id/userNameComment"
        	        android:layout_height="wrap_content"
        	        android:layout_width="wrap_content"
        	        android:text="User 1"
        	        android:textColor="#f6af05"/>
        	    <TextView 
        	        android:id="@+id/comment1"
        	        android:layout_height="wrap_content"
        	        android:layout_width="wrap_content"
        	        android:text="comment line 1"
        	        android:textColor="@android:color/background_light"
        	        android:layout_marginLeft="5sp"></TextView>"
        	</LinearLayout>
        	 <TextView 
        	        android:id="@+id/comment2"
        	        android:layout_height="wrap_content"
        	        android:layout_width="wrap_content"
        	        android:text="comment line 1"
        	        android:textColor="@android:color/background_light"
        	        android:layout_marginTop="5sp"></TextView>
        	 <LinearLayout 
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="5sp">
      	    	<ImageView 
      	    	    android:layout_height="wrap_content"
      	    	    android:layout_width="wrap_content"
      	    	    android:src="@drawable/clock_icon"
      	    	    android:layout_gravity="center_vertical"/>
      	    	<TextView
      	    	    android:layout_height="wrap_content"
      	    	    android:layout_width="wrap_content"
      	    	    android:text="1 min ago"
      	    	    android:layout_marginLeft="5sp"
      	    	    android:textColor="@android:color/background_light"
      	    	    android:textSize="10sp"
      	    	    android:id="@+id/time_of_comment"/>
          
      </LinearLayout>
    </LinearLayout>
</LinearLayout>
