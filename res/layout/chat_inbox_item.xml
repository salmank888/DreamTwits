<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10" >
    
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:layout_weight="1.5">
    <ImageView 
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:src="@drawable/user1"
        android:layout_gravity="center_vertical"
        android:id="@+id/DreamerImage"
        />
</LinearLayout>

	<LinearLayout 
    	android:layout_height="wrap_content"
    	android:layout_width="0dp"
    	android:layout_weight="7"
    	android:weightSum="2"
    	android:orientation="vertical"
    	android:layout_margin="10sp">
    		<TextView
    		    android:layout_height="0dp"
    		    android:layout_width="wrap_content"
    		    android:text="Dreamer Name"
    		    android:layout_weight="1"
    		    android:textColor="@android:color/background_light" 
    		    android:layout_marginTop="5sp"
    		    android:id="@+id/dreamerName"/>
    		<TextView
    		    android:layout_height="0dp"
    		    android:layout_width="wrap_content"
    		    android:text="This is the message from me"
    		    android:layout_weight="1"
    		    android:textSize="10sp"
    		    android:textColor="@android:color/background_light"
    		    android:layout_marginTop="5sp"
    		    android:id="@+id/dreamerMessage" />
	</LinearLayout>
		<LinearLayout 
    	android:layout_height="wrap_content"
    	android:layout_width="0dp"
    	android:layout_weight="1.5"
    	android:weightSum="2"
    	android:orientation="vertical"
    	android:layout_margin="10sp">
    		<TextView
    		    android:layout_height="0dp"
    		    android:layout_width="wrap_content"
    		    android:text="1:30 AM"
    		    android:layout_weight="1"
    		    android:textColor="@android:color/background_light" 
    		    android:layout_marginTop="5sp"
    		    android:textSize="10sp"
    		    android:id="@+id/messageTime"/>
    		<TextView
    		    android:layout_height="0dp"
    		    android:layout_width="wrap_content"
    		    android:text="1"
    		    android:layout_weight="1"
    		    android:textSize="10sp"
    		    android:background="@drawable/unread_messages_count"
    		    android:layout_marginTop="5sp"
    		    android:layout_gravity="right"
    		    android:layout_marginRight="5sp"
    		    android:gravity="center"
    		    android:id="@+id/unreadCount" />
	</LinearLayout>

</LinearLayout>
