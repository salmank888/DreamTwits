<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/main_bg" >
    
    <RelativeLayout 
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="3">

        <ImageButton
            android:id="@+id/profilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings_img"
            android:background="@null" />

    </RelativeLayout>
 <LinearLayout 
     android:layout_height="0dp"
     android:layout_width="fill_parent"
     android:layout_weight="1"
     android:background="@drawable/top_bar_bg"
     android:weightSum="10">
     <ImageView 
         android:src="@drawable/settings_name_icon"
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="10sp"
         android:layout_weight="1"/>
     <TextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:text="Dreamer"
         android:layout_marginLeft="5sp"
         android:layout_gravity="center_vertical"
         android:textColor="@android:color/background_light"
         android:layout_weight="5" />
     <TextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:text="Some Name"
         android:layout_marginLeft="5sp"
         android:layout_gravity="center_vertical"
         android:textColor="@android:color/background_light"
         android:layout_weight="4"
         android:textSize="20sp" />
     
 </LinearLayout>
  <LinearLayout 
     android:layout_height="0dp"
     android:layout_width="fill_parent"
     android:layout_weight="1"
     android:background="@drawable/top_bar_bg"
     android:weightSum="10"
     android:layout_marginTop="2sp">
     <ImageView 
         android:src="@drawable/settings_location_icon"
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="10sp"
         android:layout_weight="1"/>
     <TextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:text="Location"
         android:layout_marginLeft="5sp"
         android:layout_gravity="center_vertical"
         android:textColor="@android:color/background_light"
         android:layout_weight="5" />
     <TextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:text="Pakistan"
         android:layout_marginLeft="5sp"
         android:layout_gravity="center_vertical"
         android:textColor="@android:color/background_light"
         android:layout_weight="4"
         android:textSize="20sp" />
     
 </LinearLayout>
 <LinearLayout 
     android:layout_height="0dp"
     android:layout_width="fill_parent"
     android:layout_weight="2"
     android:background="@drawable/top_bar_bg"
     android:weightSum="5"
     android:layout_marginTop="2sp"
     android:orientation="vertical">
     <TextView
         android:layout_height="0dp"
         android:layout_width="wrap_content"
         android:text="About"
         android:layout_marginLeft="20sp"
         android:textColor="@android:color/background_light"
         android:layout_weight="1.5"
         android:layout_marginTop="10sp"
         android:textSize="15sp" />
     
     <TextView
         android:layout_height="0dp"
         android:layout_width="wrap_content"
         android:text="This is the description of the dreamer, that can be created , modified and deleted. Write decription according to your desire and taste."
         android:layout_marginLeft="20sp"
         android:textColor="@android:color/background_light"
         android:layout_weight="3.5"
         android:layout_marginTop="10sp"
         android:textSize="10sp"
         android:layout_marginRight="10sp" />
 </LinearLayout>
  <LinearLayout 
     android:layout_height="0dp"
     android:layout_width="fill_parent"
     android:layout_weight="1"
     android:background="@drawable/top_bar_bg"
     android:weightSum="10"
     android:layout_marginTop="2sp">
     <ImageView 
         android:src="@drawable/settings_email_icon"
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="10sp"
         android:layout_weight="1"/>
     <TextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:text="Email"
         android:layout_marginLeft="5sp"
         android:layout_gravity="center_vertical"
         android:textColor="@android:color/background_light"
         android:layout_weight="3" />
     <TextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:text="user@domain.com"
         android:layout_marginLeft="5sp"
         android:layout_gravity="center_vertical"
         android:textColor="@android:color/background_light"
         android:layout_weight="6"
         android:textSize="20sp" />
     
 </LinearLayout>
</LinearLayout>
