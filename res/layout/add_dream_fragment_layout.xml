<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/main_bg" 
    android:id="@+id/addDreamContainer">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="10sp"
        android:layout_weight="6"
        android:id="@+id/featherConainer"
         >

        
        <ImageView
            android:id="@+id/feather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:src="@drawable/feather_icon" />

    </RelativeLayout>

    <EditText
        android:id="@+id/myDream"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10sp"
        android:background="@null"
        android:hint="Type your dream"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:gravity="center" />
    <Button
        android:id="@+id/selectType"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/go_ahead_btn"
        android:layout_margin="10sp"
        android:gravity="center_vertical"
        android:paddingLeft="10sp" />

    
   
</LinearLayout>
