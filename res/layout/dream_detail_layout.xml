<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_marginLeft="10sp"
    android:background="@null" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_weight="4" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9.00"
        android:orientation="vertical"
        android:weightSum="10" >

        	<LinearLayout
        	    android:layout_height="wrap_content"
        	    android:layout_width="match_parent"
        	    android:weightSum="2"
        	    android:orientation="horizontal" >
					<LinearLayout
					    android:layout_weight="1"
					    android:layout_width="0dp"
					    android:layout_height="fill_parent"
					    android:weightSum="3" >
					    <ImageView 
					        android:src="@drawable/war_type_pressed"
					        android:layout_height="wrap_content"
					        android:layout_width="0dp"
					        android:layout_weight="1"
					        android:background="@null"
					        android:id="@+id/userPhotoDetail"
					        />
					    <LinearLayout 
					        android:layout_width="0dp"
					        android:layout_height="fill_parent"
					        android:layout_weight="3"
					        android:orientation="vertical"
					        android:weightSum="2"
					        android:layout_marginLeft = "10sp"
					        android:layout_marginTop="20sp">
					        <TextView 
					            android:layout_height="0dp"
					            android:layout_weight="0.8"
					            android:layout_width="wrap_content"
					            android:text="Some Person"
					            android:textColor="@android:color/background_light"
					            android:textSize="12sp"
					            android:id="@+id/usernameDetail"
					            />
					        <LinearLayout 
					            android:layout_height="0dp"
					            android:layout_width="fill_parent"
					            android:layout_weight="1"
					            android:orientation="horizontal">
					            <ImageView 
					                android:src="@drawable/clock_icon"
					                android:background="@null"
					                android:layout_height="wrap_content"
					                android:layout_width="wrap_content"/>

					            <TextView
					                android:id="@+id/time_of_tweet_Detail"
					                android:layout_width="wrap_content"
					                android:layout_height="wrap_content"
					                android:text="9:10 am"
					                android:textSize="8sp"
					                android:textColor="@android:color/background_light"
					                android:layout_marginLeft="5sp"
					                 />
					            
					        </LinearLayout>
					    </LinearLayout>
					   
					</LinearLayout> 
					<LinearLayout 
					    android:layout_height="fill_parent"
					    android:layout_width="0dp"
					    android:layout_weight="1"
					    android:weightSum="3"
					    android:orientation="vertical">
					    <LinearLayout
					        android:layout_weight="1"
					        android:layout_height="0dp"
					        android:layout_width="fill_parent" >
					    </LinearLayout>
					    <LinearLayout
					        android:layout_weight="1.3"
					        android:layout_height="0dp"
					        android:layout_width="fill_parent"
					        android:orientation="horizontal" >
					        <TextView 
					            android:layout_height="wrap_content"
					            android:layout_width="wrap_content"
					            android:layout_gravity="bottom"
					            android:text="#tag3"
					            android:layout_marginLeft="30sp"
					            android:textSize="10sp"
					            android:textColor="@android:color/background_light"/>
					        <TextView 
					            android:layout_height="wrap_content"
					            android:layout_width="wrap_content"
					            android:layout_gravity="bottom"
					            android:text="#tag2"
					            android:layout_marginLeft="5sp"
					            android:textSize="10sp"
					            android:textColor="@android:color/background_light"/>
					         <TextView 
					            android:layout_height="wrap_content"
					            android:layout_width="wrap_content"
					            android:layout_gravity="bottom"
					            android:text="#tag1"
					            android:layout_marginLeft="5sp"
					            android:textSize="10sp"
					            android:textColor="@android:color/background_light"/>
					    </LinearLayout>
					    <LinearLayout android:layout_height="0dp"
					        android:layout_width="fill_parent"
					        android:layout_weight="0.7"></LinearLayout>
					</LinearLayout>
					       	    	
        	</LinearLayout>

        	<RelativeLayout
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    
        	    android:background="@drawable/notification_dream_dummy" >

        	    <TextView
        	        android:id="@+id/tweatTextDetail"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_centerHorizontal="true"
        	        android:layout_centerVertical="true"
        	        android:text="This is my Dream"
        	        android:textAppearance="?android:attr/textAppearanceLarge"
        	        android:textColor="@android:color/background_light" />

        	    <LinearLayout
        	        android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_alignBottom="@+id/imageView3"
        	        android:layout_alignParentLeft="true"
        	        android:weightSum="3"
        	        android:orientation="horizontal" >
					    <LinearLayout
					        android:layout_height="wrap_content"
					        android:layout_width="0dp"
					        android:layout_weight="1" ></LinearLayout>
					     <LinearLayout
					        android:layout_height="wrap_content"
					        android:layout_width="0dp"
					        android:layout_weight="1" ></LinearLayout>
					      
        	    </LinearLayout>
        	</RelativeLayout>

    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_height="0dp"
    android:layout_width="fill_parent"
    android:layout_weight="6"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:weightSum="10"
        android:orientation="horizontal">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/likes_icon"
            android:layout_gravity="top"/>
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:text="user1, user2, user3, user4, user5, user6, user7, user8, user9 and 23 more"
            android:textSize="12sp"
            android:layout_marginLeft="5sp"
            android:textColor="@android:color/background_light"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/comment_icon"
            android:layout_gravity="top"/>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:orientation="vertical">
        	<TextView
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_marginLeft="5sp"
        	    android:text="User1 this is my Comment fo you"
        	    android:textColor="@android:color/background_light" />
        	<TextView
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_marginLeft="5sp"
        	    android:text="User2 please write your dream more specifically for the proper understanding of all"
        	    android:textColor="@android:color/background_light"
        	    android:layout_marginTop="5sp" />
        	<TextView
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_marginLeft="5sp"
        	    android:text="User3 this is comment"
        	    android:textColor="@android:color/background_light"
        	     android:layout_marginTop="5sp" />
        	<TextView
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_marginLeft="5sp"
        	    android:text="User4 I have the same kind of dream last Night"
        	    android:textColor="@android:color/background_light"
        	     android:layout_marginTop="5sp" />
           <TextView
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_marginLeft="5sp"
        	    android:text="View All 24 Comments"
        	    android:textColor="@android:color/background_light"
        	     android:layout_marginTop="10sp"
        	     android:textSize="15sp"
        	     android:id="@+id/viewAllComments" />
           <LinearLayout 
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="5sp">
               <ImageButton 
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:src="@drawable/likes_pressed_icon"
                   android:background="@null"
                   android:layout_marginTop="10sp"
                   />
                <ImageButton 
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:src="@drawable/comment_pressed_icons"
                   android:background="@null"
                   android:layout_marginTop="10sp"
                   android:layout_marginLeft="15sp"
                   />
           </LinearLayout>
           </LinearLayout>
			
        	
        	
        	
        	
    </LinearLayout>
</LinearLayout>
</LinearLayout>
